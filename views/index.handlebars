<h1 class="text-center">Eat-Da-Burger!</h1>

<div class="text-center">

  <img src="/assets/img/burgersBG.png" class="img-fluid" alt="burger-background-img">

  <div class="card-body">
    <h2 class="card-title" id="solgan">Create your own burger bucket list!</h2>
  </div>

</div>

<div class="container ">

  <h2>Add a burger</h2>
  <form class="create-form">
    <div class="form-group mb-3">
      <label for="ca">Burger Name </label>
      <input type="text" id="ca" name="name">
    </div>
    <button id="submitBtn" type="submit">Add Burger!</button>
  </form>

  <div class="row">

    <div class="col-sm-6">
      <h2>Burger bucket list</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>